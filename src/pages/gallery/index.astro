---
import Contents from "../../layouts/Contents.astro";
---

<Contents title="Gallery">
  <div style="min-height: 80vh;">
    <h1 class="text-center text-3xl font-bold p-4">Our Photos</h1>
    <div class="container">
      <img
        loading="lazy"
        src="https://source.unsplash.com/1300x1200/?algeria"
      />
      <img
        loading="lazy"
        src="https://source.unsplash.com/1300x1200/?lebanon"
      />
      <img loading="lazy" src="https://source.unsplash.com/1300x1200/?qatar" />
      <img loading="lazy" src="https://source.unsplash.com/1300x1200/?uae" />
      <img loading="lazy" src="https://source.unsplash.com/1300x1200/?kuwait" />
      <img loading="lazy" src="https://source.unsplash.com/1300x1200/?oman" />
      <img loading="lazy" src="https://source.unsplash.com/1300x1200/?turkey" />
      <img loading="lazy" src="https://source.unsplash.com/1300x1200/?iran" />
      <img loading="lazy" src="https://source.unsplash.com/1300x1200/?jordan" />
      <img loading="lazy" src="https://source.unsplash.com/1300x1200/?Kuwait" />
    </div>
  </div>

  <style>
    .container {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 20px;
      padding: 15px;
      margin: 0 auto;
    }
    .container img {
      width: 100%;
      display: block;
      -webkit-filter: grayscale(1);
      filter: grayscale(1);
      transition: all 100ms ease-out;
    }
    .container img:hover {
      transform: scale(1.04);
      -webkit-filter: grayscale(0);
      filter: grayscale(0);
    }
  </style>
  <script>
    const images = document.querySelectorAll(".container img");
    images.forEach((image) => {
      image.addEventListener("click", () => {
        window.open(image.src);
      });
    });
  </script>
</Contents>
